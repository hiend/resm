{require_otp_vsn, "R15|R16|17"}.

{deps, [
  {cowboy, "1.0.1", {git, "git://github.com/ninenines/cowboy.git", {tag, "1.0.1"}}},
  {jiffy, "0.13.3", {git, "git://github.com/davisp/jiffy.git", {tag, "0.13.3"}}},
  {lager, "2.1.1", {git, "git://github.com/basho/lager.git", {tag, "2.1.1"}}},
  {edown, ".*", {git, "git://github.com/esl/edown.git", master}},
  {sync, ".*", {git, "git://github.com/rustyio/sync.git", master}}
]}.

{erl_opts, [debug_info]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.

{edoc_opts, [
    {doclet, edown_doclet},
    {todo, true},
    {private, true},
    {new, true},
    {packages, false},
    {src_path, ["src"]},
    {stylesheet, ""},
    {image, ""},
    {top_level_readme, {"./README.md", "http://github.com/hiend/resm"}}
]}.
